{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Cripto-p2p"
  },
  "basePath": "/api",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Authorization": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "The token for authentication"
    }
  },
  "paths": {
    "/": {
      "get": {
        "tags": ["Sample endpoint"],
        "description": "Welcome",
        "responses": {
          "200": {
            "description": "Welcome to Cripto-p2p"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Register a user",
        "description": "Register a user",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "register parameters",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "John"
                },
                "surname": {
                  "type": "string",
                  "example": "Cena"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "user@example.com"
                },
                "adress": {
                  "type": "string",
                  "example": "the sample address"
                },
                "password": {
                  "type": "string",
                  "example": "dqKXVRhx4wiZIPgK9E8ncnxAs#apW6fvKxxU5p8SHbkTkvg2gGSM1rVtY9dXtEpcCHJEmyDwGjkIYKpXStw8puJUobNF84V6I"
                },
                "cvu": {
                  "type": "string",
                  "pattern": "^[0-9]{22}$",
                  "example": "9789678918522187052125"
                },
                "criptoAdress": {
                  "type": "string",
                  "pattern": "^[0-9]{8}$",
                  "example": "86822153"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login a user",
        "description": "Login a user. This operation is neccesary to get the token and use the other endpoints",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Login parameters",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "user@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "dqKXVRhx4wiZIPgK9E8ncnxAs#apW6fvKxxU5p8SHbkTkvg2gGSM1rVtY9dXtEpcCHJEmyDwGjkIYKpXStw8puJUobNF84V6I"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Login successful and token generated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The user ID."
                    },
                    "username": {
                      "type": "string",
                      "description": "The user name."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Register a user",
        "description": "Register a user",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "User created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transaction": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Create a transaction",
        "description": "Create a transaction",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "transaction parameters",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "cryptoActive": {
                  "type": "string",
                  "example": "USDT"
                },
                "nominalAmount": {
                  "type": "number",
                  "example": 50
                },
                "cotization": {
                  "type": "number",
                  "example": 10
                },
                "operationValue": {
                  "type": "number",
                  "example": 10
                },
                "userEmail": {
                  "type": "email",
                  "example": "Hitestingsecondpart@binance.com"
                },
                "operationAmount": {
                  "type": "number",
                  "example": 500
                },
                "action": {
                  "type": "string",
                  "example": "Realice la transferencia"
                },
                "type": {
                  "type": "string",
                  "example": "Venta"
                }
              }
            }
          }
        ],
         "responses": {
          "201": {
            "description": "Transaction created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": ["Transactions"],
        "summary": "Create a transaction",
        "description": "Create a transaction",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "ltDate",
            "in": "query",
            "description": "transaction parameters",
            "required": true,
            "schema": {
              "type": "datetime",
              "example": "2023-06-01T19:33:46.377Z"
            }
          },
          {
            "name": "gtDate",
            "in": "query",
            "description": "transaction parameters",
            "required": true,
            "schema": {
              "type": "datetime",
              "example": "2023-06-19T19:33:46.377Z"    
            }
          },
          {
            "name": "user",
            "in": "query",
            "description": "transaction parameters",
            "required": true,
            "schema": {
              "type": "email",
              "example": "Hitestingsecondpart@binance.com"   
            }
          }
        ],
         "responses": {
          "201": {
            "description": "Transaction created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/cotizations": {
      "get": {
        "tags": ["Cotizations"],
        "description": "Get most famous crypto-currencies prices",
        "responses": {
          "200": {
            "description": "Welcome to Cripto-p2p"
          }
        }
      }
    },
    "/lastcotization": {
      "get": {
        "tags": ["Cotizations"],
        "description": "Get most famous crypto-currencies prices",
        "responses": {
          "200": {
            "description": "Welcome to Cripto-p2p"
          }
        }
      }
    },
    "/lastdaycotizations": {
      "get": {
        "tags": ["Cotizations"],
        "description": "Get most famous crypto-currencies prices",
        "parameters": [
          {
            "name": "currency",
            "in": "query",
            "description": "Currency name",
            "required": true,
            "schema": {
              "type": "string",
              "example": "USDT"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Welcome to Cripto-p2p"
          }
        }
      }
    },
    "/intentions": {
      "post": {
        "tags": ["Intentions"],
        "summary": "Create a Buy / Sell intention",
        "description": "Create a Buy / Sell intention",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Intention parameters",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "datetime": {
                  "type": "datetime",
                  "example": "2021-10-10 10:10:10"
                },
                "cryptoName": {
                  "type": "string",
                  "example": "USDT"
                },
                "amountCrypto": {
                  "type": "number",
                  "example": 200
                },
                "valueCripto": {
                  "type": "number",
                  "example": 1.05
                },
                "amountPesos": {
                  "type": "number",
                  "example": 7500
                },
                "userData": {
                  "type": "string",
                  "description": "The username",
                  "example": "John Doe"
                },
                "userEmail": {
                  "type": "string",
                  "example": "johndoe@gmail.com"
                },
                "type": {
                  "type": "string",
                  "description": "Compra / Venta",
                  "enum": ["Compra", "Venta"],
                  "example": "Compra"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Intention created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": ["Intentions"],
        "description": "Get a list of all BUY / SELL intentions",
        "responses": {
          "200": {
            "description": "a list of all intentions"
          }
        }
      }
    }
  }
}